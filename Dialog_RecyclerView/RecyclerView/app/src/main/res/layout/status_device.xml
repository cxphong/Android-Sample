<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Name "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:id="@+id/textViewName" />

    <TextView
        android:text="Status "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewName"
        android:layout_alignStart="@+id/textViewName"
        android:layout_marginTop="14dp"
        android:id="@+id/textViewStatus" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewStatus"
        android:layout_alignStart="@+id/textViewStatus"
        android:layout_marginTop="20dp"
        android:id="@+id/textViewChromaMode" />
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewChromaMode"
        android:layout_alignStart="@+id/textViewStatus"
        android:layout_marginTop="20dp"
        android:id="@+id/textViewChromaBrightness" />
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewChromaBrightness"
        android:layout_alignStart="@+id/textViewStatus"
        android:layout_marginTop="20dp"
        android:id="@+id/textViewBatteryLevel" />

    <EditText
        android:text=""
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewBatteryLevel"
        android:layout_alignStart="@+id/textViewStatus"
        android:layout_marginTop="20dp"
        android:id="@+id/editTextSetMode" />

    <Button
        android:text="SET MODE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextSetMode"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:id="@+id/buttonSetMode" />


    <EditText
        android:text=""
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextSetMode"
        android:layout_alignStart="@+id/textViewStatus"
        android:layout_marginTop="20dp"
        android:id="@+id/editTextSetBr" />

    <Button
        android:text="Set Br"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextSetBr"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:id="@+id/buttonSetBr" />

</RelativeLayout>
